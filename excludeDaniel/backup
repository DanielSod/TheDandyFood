function registerNewUser() {
    const data = {
      Realname = document.getElementById('new-realname'),
      Email = document.getElementById('new-email'),
      Country = document.getElementById('new-country'),
      Username = document.getElementById('new-username'),
      Password = document.getElementById('new-password')
    };
  
    const options = {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify(data),
    };
  
    fetch('/api', options);
  }

  
  
  
